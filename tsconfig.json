{
  "compilerOptions": {
    "allowJs": true, // allow importing JS files
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true, // ignore missing types
    "strict": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}